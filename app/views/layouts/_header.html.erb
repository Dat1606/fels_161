<header id="header">
  <div id="header-inner">
    <div id="logo">
      <h1><span><%= link_to t(".fastking"), root_path %></span></h1>
    </div>
    <div id="top-nav">
      <% unless logged_in? %>
        <ul>
          <li><button class="btn btn-success sign_up_button" data-toggle="modal" data-target="#signup"><%= t "sign_up" %></button></li>
          <li><button class="btn btn-success sign_up_button" data-toggle="modal" data-target="#login"><%= t "log_in" %></button></li>
        </ul>
        <%= render "layouts/sign_up_modal" %>
        <%= render "layouts/log_in_modal" %>
      <% else %>
        <ul>
          <li>
            <%= link_to t("log_out"), logout_path, method: :delete, class: "btn btn-success" %>
          </li>
        </ul>
      <% end %>
    </div>
    <div class="clr"></div>
  </div>
</header>
