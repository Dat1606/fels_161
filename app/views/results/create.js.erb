<% if @result.save %>
  $("#hidden-answer<%= @vocabulary.id %>").html("<%= t "definition" %><%= @vocabulary.description %>");
  $("#hidden-example<%= @vocabulary.id %>").html("<%= t "example" %><%= @vocabulary.example %>");
<% else %>
  $("#hidden-answer<%= @vocabulary.id %>").html("<%= t "please_select_your_answer" %>");
<% end %>
